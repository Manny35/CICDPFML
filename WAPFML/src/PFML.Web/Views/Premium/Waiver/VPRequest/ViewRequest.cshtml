@using (Form())
{
    @using (Panel(headingText: "View Voluntary Plan Waiver", labelText: "VPWaiver_view", defaultLabelColumns: 0, defaultControlColumns: 12))
    {
        @using (Panel(headingText: "Voluntary Plan Details", panelLayout: PanelLayout.Inline, ignoreLayout: false, defaultLabelColumns: 0, defaultControlColumns: 12))
        {
            @Blank(labelColumns: 4, labelText: "Dates the Voluntary Plan is available to the employees in 2018")
            @Blank(labelText: "StartDate:")
            @Data(labelText: "", dataSource: "VPWaiver[0].StartDate", formatter: Formatter.Date)
            @Blank(labelText: "EndDate:")
            @Data(labelText: "", dataSource: "VPWaiver[0].EndDate", formatter: Formatter.Date)
            @Blank(labelText: "")
            @using (Panel(headingText: "Leave Types", panelLayout: PanelLayout.Grid, defaultLabelColumns: 0, defaultControlColumns: 12))
            {
                @using (DataTable(dataSource: "VPWaiver", searchable: false, dataTableHeight: DataTableHeight.Full, recordCountInfo: false))
                {
                    @DataTableColumn(columnName: "Types of Leave available", dataSource: "TypesofLeaveAvailable", lookupName: LookupTable.WaiverLeaveType)
                    @DataTableColumn(columnName: "Weeks available annualy", dataSource: "WeeksAvailableAnnually", lookupName: LookupTable.WaiverWeeksAvailable)
                    @DataTableColumn(columnName: "Percentage of wages paid", dataSource: "PercentageofWagesPaid")
                }
            }
        }
        @Blank(labelText: "")
        @using (Panel(headingText: "Supporting Documents", panelLayout: PanelLayout.Grid, defaultLabelColumns: 0, defaultControlColumns: 12))
        {
            @using (DataTable(dataSource: "VPWaiver", searchable: false, dataTableHeight: DataTableHeight.Full, recordCountInfo: false))
            {
                @DataTableColumn(columnName: "DocumentName", dataSource: "DocumentName")
                @DataTableColumn(columnName: "View", text: "View", targetDataSource: "View", transition: "View")                
            }
        }
        @Blank(labelText: "")
        @Button(transition: "Close", controlColumns: 3, labelColumns: 9)
    }
}