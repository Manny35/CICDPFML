@Html.Partial("WizardHeader", Machine["ListSection"], new ViewDataDictionary(this.ViewData) { { "current", (FACTS.Framework.Lookup.LookupCode)Machine["CurrentSection"] }, { "showHeader", (bool)Machine["ShowHeader"] } })

@using (Form())
{
    @using (Panel(stateFilter: "EnterBusinessInfo", panelLayout: PanelLayout.Stacked,borderVisible:false))
    {
        @using (Panel(headingText: "Enter Employer Business Information", defaultControlColumns: 4, defaultLabelColumns: 4))
        {
            @Data(labelText: "Legal Entity Type:",lookupName:LookupTable.LegalEntity, dataSource: "EmployerRegistration.EmployerDto.EntityTypeCode")
            @Data(labelText: "Business Type:", lookupName: LookupTable.BusinessType, dataSource: "EmployerRegistration.EmployerDto.EntityName")
            @Data(labelText: "FEIN:", dataSource: "EmployerRegistration.EmployerDto.Fein")
            @RadioButtonGroup(labelText: "Will this employer act as a Professional Employer Organization(PEO)?", lookupName: LookupTable.BoolYesNo,lookupSort:"{DisplaySortOrder}", dataSource: "peo", required: "true",text:"N")
            @RadioButtonGroup(labelText: "Is this employer the client of a PEO?", lookupName: LookupTable.BoolYesNo, lookupSort: "{DisplaySortOrder}", dataSource: "cpeo", required: "true", text: "N")
            @RadioButtonGroup(labelText: "Does this employer have workers that are exempt under NMAC 51-1-42.F(12)?", lookupName: LookupTable.BoolYesNo, lookupSort: "{DisplaySortOrder}", dataSource: "namc", required: "true", text: "N")
            @RadioButtonGroup(labelText: "Does this employer have workers considered to be independent contractors?", lookupName: LookupTable.BoolYesNo, lookupSort: "{DisplaySortOrder}", dataSource: "cont", required: "true", text: "N")
        }
        @using (Panel(borderVisible: false, panelLayout: PanelLayout.Inline, cssClass: "text-center"))
        {
            @Button(transition: "Previous")
            @Button(transition: "Next")
        }
    }
}