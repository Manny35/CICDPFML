@Html.Partial("WizardHeader", Machine["ListSection"], new ViewDataDictionary(this.ViewData) { { "current", (FACTS.Framework.Lookup.LookupCode)Machine["CurrentSection"] }, { "showHeader", (bool)Machine["ShowHeader"] } })

@using (Form())
{
    @using (Panel(stateFilter: "EmpIdentification", panelLayout: PanelLayout.Stacked,borderVisible:false))
    {
        @using (Panel(headingText: "Employer Identification Information", defaultControlColumns: 4, defaultLabelColumns: 4))
        {
            <p>Provide the mailing address and other information about this employer:</p>
            @SelectBox(labelText: "Legal Entity Type:",lookupName:LookupTable.LegalEntity, dataSource: "EmployerRegistration.EmployerDto.EntityTypeCode", required:"true",blankItemText:"Select One")
            @TextBox(labelText: "Legal Name:", dataSource: "EmployerRegistration.EmployerDto.EntityName", formatter: Formatter.TextAlphaNumeric, required: "true")
            @TextBox(labelText: "Trade Name/Doing Business As (DBA) Name:", formatter: Formatter.TextAlphaNumeric, dataSource: "EmployerRegistration.EmployerUnitDto.DoingBusinessAsName")
            @TextBox(labelText: "Maining Address Line 1:", formatter: Formatter.TextAlphaNumeric, dataSource: "EntityAddress.Address.AddressLine1", required: "true")
            @TextBox(labelText: "Maining Address Line 2:", formatter: Formatter.TextAlphaNumeric, dataSource: "EntityAddress.Address.AddressLine2")
            @TextBox(labelText: "City:", dataSource: "bcity", formatter: Formatter.TextAlpha, required: "EntityAddress.Address.City")
            @SelectBox(labelText: "State",lookupName:LookupTable.State, dataSource: "EntityAddress.Address.StateCode")
            @TextBox(labelText: "ZIP/Postal Code:", formatter: Formatter.Postal, dataSource: "EntityAddress.Address.Zip")
            @SelectBox(labelText: "Country:", lookupName: LookupTable.Country, dataSource: "EntityAddress.Address.CountryCode", required: "true")
            @TextBox(labelText: "Business Phone Number:", dataSource: "EntityAddress.Address.PhoneNumber", formatter: Formatter.Phone, required: "true",labelColumns:4,controlColumns:2)
            @TextBox(labelText: "ext:", dataSource: "EntityAddress.Address.PhoneNumberExtn", formatter: Formatter.TextNumeric, labelColumns:1,controlColumns:1)
            @TextBox(labelText: "Business Fax Number:", formatter: Formatter.TextNumeric, dataSource: "EntityAddress.Address.FaxNumber")
            @TextBox(labelText: "Business E-Mail Address:", dataSource: "EntityAddress.Address.EmailAddress", formatter: Formatter.Email, required: "true")
            @TextBox(labelText: "Re-enter Business E-Mail Address:", dataSource: "LegalAddrReEmail",formatter:Formatter.Email, required: "true")
            @TextBox(labelText: "Business Web Address:", dataSource: "EntityAddress.Address.BusinessWebAddress")
            @SelectBox(labelText: "Communication Method:",lookupName:LookupTable.CommunicationMethod, dataSource: "EmployerRegistration.EmployerDto.EmployerPreference.CorrespondanceTypeCode", required: "true",text:LookupTable_CommunicationMethod.Email)
        }
        @using (Panel(borderVisible: false, panelLayout: PanelLayout.Inline, cssClass: "text-center"))
        {
            @Button(transition: "Previous")
            @Button(transition: "Next")
        }
    }
}